  "dependencies": {
    "@babel/runtime": "^7.7.6",
    "@ledgerhq/hw-transport": "^5.3.0",
    "bech32": "^1.1.3",
    "ripemd160": "^2.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@ledgerhq/hw-transport-node-hid": "^5.3.0",
    "@ledgerhq/hw-transport-u2f": "^5.3.0",
    "@ledgerhq/hw-transport-webusb": "^5.3.0",
    "@ledgerhq/logs": "^5.3.0",
    "@vue/cli-plugin-babel": "^4.1.1",
    "@vue/cli-plugin-eslint": "^4.1.1",
    "@vue/cli-service": "^4.1.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "bip32": "2.0.5",
    "bip39": "3.0.2",
    "core-js": "^3.4.8",
    "crypto-js": "3.2.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.1",
    "index.js": "^0.0.3",
    "jest": "^24.9.0",
    "jest-serial-runner": "^1.1.0",
    "prettier": "^1.19.1",
    "secp256k1": "^4.0.0",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "test:unit": "jest -c jest.config.unit.js",
    "test:integration": "jest -c jest.config.integration.js --runInBand --detectOpenHandles",
    "serve": "openssl req -nodes -new -x509 -config certs/openssl.cnf -keyout certs/server.key -out certs/server.cert; openssl x509 -in certs/server.cert -out certs/cert.pem -outform PEM; vue-cli-service serve vue_example/main.js"
  },
  "moduleDirectories": [
    "node_modules",
    "dist"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "publishConfig": {
    "access": "public"
  }
